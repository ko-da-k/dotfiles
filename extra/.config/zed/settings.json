// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "tabs": {
    "file_icons": false,
    "git_status": true,
  },
  "project_panel": {
    "auto_fold_dirs": false,
  },
  "edit_predictions": {
    "provider": "copilot",
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5",
    },
    "model_parameters": [],
  },
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  // "vim_mode": true,
  "helix_mode": true,
  "which_key": {
    "enabled": true,
    "delay_ms": 100,
  },
  "vim": {
    "cursor_shape": {
      "normal": "block",
      "replace": "underline",
      "visual": "underline",
    },
  },
  "cursor_blink": false,
  "scrollbar": {
    "show": "never",
  },
  "vertical_scroll_margin": 0,
  "max_tabs": 4,
  "tab_bar": {
    "show_pinned_tabs_in_separate_row": false,
    "show": true,
    "show_nav_history_buttons": false,
  },
  "toolbar": {
    "quick_actions": false,
  },
  "ui_font_size": 14,
  "ui_font_family": "Hack Nerd Font Mono",
  "buffer_font_size": 13,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_features": {
    "liga": false,
    "calt": false,
  },
  "buffer_line_height": {
    "custom": 1.2,
  },
  "expand_excerpt_lines": 5,
  "excerpt_context_lines": 3,
  "terminal": {
    "font_size": 12,
    "font_family": "Hack Nerd Font Mono",
    "line_height": {
      "custom": 1.2,
    },
  },
  "autosave": "on_focus_change",
  "show_whitespaces": "trailing",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Everforest Dark Hard (regular)",
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy",
        },
      },
    },
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
          "inlayHints": {
            "callArgumentNames": false,
          },
        },
      },
    },
  },
  "languages": {
    "JSON": {
      "format_on_save": "on",
    },
    "TypeScript": {
      "language_servers": ["typescript-language-server", "!vtsls", "..."],
    },
    "TSX": {
      "language_servers": ["typescript-language-server", "!vtsls", "..."],
    },
    "JavaScript": {
      "language_servers": ["typescript-language-server", "!vtsls", "..."],
    },
  },
}
