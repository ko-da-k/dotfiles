{
    "extensions.ignoreRecommendations": true,
    "editor.fontSize": 13,
    "editor.renderWhitespace": true,
    "editor.wordWrap": "on",
    "files.encoding": "utf8",
    "workbench.colorTheme": "Dracula Soft",
    "vim.useSystemClipboard": true,
    "git.autofetch": false,
    "python.linting.pep8Enabled": true,
    "terminal.integrated.shellArgs.osx": ["-l"],
    "editor.fontFamily": "Source Han Code JP, Menlo, Monaco, 'Courier New', monospace",
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,


    // 言語に対するファイルの関連付け (例 "*.extension": "html") を構成します。これらの関連付けは、インストールされている言語の既定の関連付けより優先されます。
    "files.associations": {
        "*.py": "python",
        "*.rb": "ruby",
    },
    "[ruby]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "[css]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "[scss]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "[markdown]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "[slim]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "window.zoomLevel": -1,
    "[sql]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "explorer.confirmDragAndDrop": false,
    "editor.renderControlCharacters": true,
    "explorer.confirmDelete": false,
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "vs-kubernetes": {
        "vs-kubernetes.helm-path": "~/.vs-kubernetes/tools/helm/darwin-amd64/helm",
        "vs-kubernetes.draft-path": "~/.vs-kubernetes/tools/draft/darwin-amd64/draft",
        "vs-kubernetes.minikube-path": "~/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
    },
    "files.insertFinalNewline": true,
    "editor.suggestSelection": "first",
    "go.useLanguageServer": true,
    "python.jediEnabled": false,
    "[jsonnet]": {
        "editor.tabSize": 2,
    },
    "[toml]": {
        "editor.tabSize": 2,
    },
    "[go]": {
    },
    "go.goroot": ""
}
