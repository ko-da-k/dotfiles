" common keymap
source ~/.vimrc.keymap

" jetbrains actions
" how to check: `:actionlist`
nnoremap gd :action GotoDeclaration<CR>
nnoremap <Leader>gt :action GotoTypeDeclaration<CR>
nnoremap <Leader>gi :action GotoImplementation<CR>
nnoremap <Leader>gs :action GotoSuperMethod<CR>
nnoremap <Leader>gb :action Back<CR>
nnoremap <Leader>gf :action Forward<CR>
nnoremap <Leader>ga :action GotoAction<CR>
vnoremap <Leader>ga :action GotoAction<CR>
nnoremap <Leader>== :action ReformatCode<CR>
vnoremap <Leader>== :action ReformatCode<CR>

" ideavim-easymotion
set easymotion

map <Leader>f <Plug>(easymotion-bd-f)
nmap s <Plug>(easymotion-bd-f2)
nmap g/ <Plug>(easymotion-sn)
map <Leader>L <Plug>(easymotion-bd-jk)
map <Leader>w <Plug>(easymotion-bd-w)
